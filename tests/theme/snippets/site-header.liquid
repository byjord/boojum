<header>
  <div class="wrapper flex-wrapper flex-wrapper__center">
    <div class="row__coloum-shrinkwrap js-logo">
      {% if settings.show_logo %}
        <a id="logo" href="/">
          <span class="desktop">{{ 'logo.png' | asset_url | img_tag: shop.name }}</span>
          <span class="mobile">{{ 'logo-mobile.png' | asset_url | img_tag: shop.name }}</span>
        </a>
      {% else %}
        <a id="logo" href="/">{{ shop.name }}</a>
      {% endif %}
    </div>

    <!-- Splitting up the nav into desktop and mobile so we don't have to manage messy states in JS. Instead we're just hiding and showing one depending on screen size -->
    <div class="row__coloum-shrinkwrap js-main-nav">
      {% include 'site-nav' %}
    </div>

    <div class="row__coloum-auto">
      {% include 'search-modal' %}
    </div>

    <div class="row__coloum-shrinkwrap js-top-items flex-wrapper flex-wrapper__center">
      <nav>
        <span>
          <a href="/account{% unless customer %}/login{% endunless %}">
            {% unless customer %}Sign in{% else %}Account{% endunless %}
          </a>
        </span>

        <span class="icon icon-ui-cart">
          
        </span>

        <!-- Cart Link -->
        <span class="cart">
          <a href="/cart">
            <span class="cart-count"></span> | ({{ cart.total_price | money }})
          </a>
        </span>

      </nav>
    </div>
  </div>
</header>
